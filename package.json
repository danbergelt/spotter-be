{
  "name": "spotter-api",
  "version": "1.1.3",
  "description": "API serving data to the spotter client",
  "main": "index",
  "author": "Dan Bergelt",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csv-stringify": "^5.3.6",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "fp-ts": "^2.5.3",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "http-status-codes": "^1.4.0",
    "husky": "^4.2.0",
    "io-ts": "^2.2.2",
    "io-ts-extra": "^0.7.0",
    "io-ts-types": "^0.5.6",
    "is-hexcolor": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.0.2",
    "mailgun-js": "^0.22.0",
    "mongodb": "^3.5.6",
    "mongoose": "^5.7.4",
    "mongoose-unique-validator": "^2.0.3",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "xss-clean": "^0.1.1",
    "yup": "^0.28.3"
  },
  "scripts": {
    "test": "TESTING=true NODE_ENV=test ts-mocha -p tsconfig.json  src/test/integration/controllers/readExercises.test.ts --exit",
    "coverage": "TESTING=true NODE_ENV=test nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && ./node_modules/.bin/codecov",
    "start": "NODE_ENV=production ts-node --transpile-only --files src/index",
    "staging": "NODE_ENV=production STAGING=true ts-node --transpile-only --files src/index",
    "dev": "tsnd --no-deps --respawn --poll --interval 1000 src/index",
    "lint": "eslint --ext .js,.ts src",
    "fix": "eslint --fix . --ext .js,.ts src"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-mongo-sanitize": "^1.3.1",
    "@types/express-rate-limit": "^3.3.3",
    "@types/helmet": "^0.0.45",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/jwt-decode": "^2.2.1",
    "@types/mailgun-js": "^0.22.3",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.36",
    "@types/mongoose-unique-validator": "^1.0.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.1",
    "@types/ramda": "^0.27.3",
    "@types/sinon": "^9.0.0",
    "@types/sinon-express-mock": "^1.3.8",
    "@types/yup": "^0.26.36",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "jwt-decode": "^2.2.0",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "sinon": "^9.0.1",
    "sinon-express-mock": "^2.2.1",
    "source-map-support": "^0.5.16",
    "ts-mocha": "^6.0.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "nyc": {
    "lines": 80,
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.test.*",
      "coverage/lcov-report/*.*",
      "src/test/utils/*.*",
      "src/types",
      "src/typings"
    ],
    "check-coverage": true,
    "all": true,
    "sourceMap": true
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
