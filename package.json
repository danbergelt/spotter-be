{
  "name": "spotter-api",
  "version": "1.0.0",
  "description": "API serving data to the spotter client",
  "main": "index",
  "author": "Dan Bergelt",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-mongo-sanitize": "^1.3.1",
    "@types/express-rate-limit": "^3.3.3",
    "@types/helmet": "^0.0.45",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mailgun-js": "^0.22.3",
    "@types/mongoose": "^5.5.36",
    "@types/node": "^13.1.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csv-stringify": "^5.3.6",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "husky": "^4.2.0",
    "is-hexcolor": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.0.2",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.7.4",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "xss-clean": "^0.1.1"
  },
  "scripts": {
    "test": "TESTING=true ts-mocha -p tsconfig.json --file src/test/utils/setup.ts src/test/tests/**/**/*.test.ts --file src/test/utils/teardown.ts",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "start": "NODE_ENV=production ts-node --files src/index",
    "dev": "tsnd --respawn src/index",
    "lint": "eslint --ext .js,.ts src",
    "fix": "eslint --fix . --ext .js,.ts src"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-http": "^4.2.0",
    "@types/expect": "^24.3.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.37",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "jwt-decode": "^2.2.0",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-mocha": "^6.0.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.test.*",
      "coverage/lcov-report/*.*",
      "src/test/utils/*.*"
    ],
    "check-coverage": true,
    "all": true,
    "sourceMap": true
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
